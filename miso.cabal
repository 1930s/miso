name:                miso
version:             0.1.0.0
author:              David Johnson
maintainer:          djohnson.m@gmail.com
build-type:          Simple
cabal-version:       >=1.10

executable example
  main-is: Chess.hs
  ghc-options: -Wall -O2
  hs-source-dirs: src
  build-depends: aeson
               , base
               , bytestring
               , containers
               , elerea
               , free
               , ghcjs-base
               , ghcjs-dom
               , lens
               , lucid
               , miso
               , mtl
               , random
               , scientific
               , string-conversions
               , text
  default-language:    Haskell2010

executable benchmark
  main-is: Main.hs
  ghc-options: -Wall
  hs-source-dirs: benchmark
  js-sources: jsbits/bundle.js
  build-depends: aeson
               , base
               , bytestring
               , containers
               , elerea
               , free
               , ghcjs-base
               , ghcjs-dom
               , lens
               , lucid
               , miso
               , mtl
               , scientific
               , string-conversions
               , text
  default-language: Haskell2010

library
  exposed-modules: Miso
  ghc-options: -Wall -Werror
  hs-source-dirs: src
  build-depends:   aeson
                 , base
                 , bytestring
                 , containers
                 , elerea
                 , free
                 , ghcjs-base
                 , ghcjs-dom
                 , lucid
                 , mtl
                 , scientific
                 , string-conversions
                 , text
                 , transformers
  default-language:    Haskell2010

Test-Suite tests
    type:             exitcode-stdio-1.0
    main-is:          Main.hs
    hs-source-dirs:   tests
    build-depends:    QuickCheck
                    , base
                    , ghcjs-base
                    , ghcjs-dom
                    , miso
                    , text
    default-language: Haskell2010
    ghc-options:      -Wall -threaded -rtsopts
